  <body>
    <center>
      <form action="/submit_summary" method="post" onsubmit="return validate()">
        <h4>Title of the Book</h4> <span id="Title"></span>
        <input type="text" name="title" id="title"/> 
        <h4>Author of the Book</h4> <span id="Author"></span>
        <input type="text" name="author" id="author">
        <h4>Summary</h4> <span id="Summary"></span>
        <textarea name="summary" id="summary" cols="100" rows="30"></textarea><br>
        <button class="submit" type="submit">Submit</button>
      </form>
    </center>
  </body>
  <script>
    function validate(){
        const title = document.getElementById('title').innerHTML;
        const author = document.getElementById('author').innerHTML;
        const summary = document.getElementById('summary').innerHTML;
